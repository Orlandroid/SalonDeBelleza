<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="AgendarFecha"
    android:background="@drawable/background"
    android:orientation="vertical">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cardView3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/white"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toTopOf="@+id/botton_navigation_view_agendar_fecha"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView4">

        <EditText
            android:id="@+id/select_Date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:backgroundTint="@color/cafe2"
            android:clickable="false"
            android:drawableLeft="@drawable/calendar_icon"
            android:drawablePadding="12dp"
            android:focusable="false"
            android:fontFamily="@font/poppins_medium"
            android:hint="@string/add_date"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView4"
        android:layout_width="366dp"
        android:layout_height="129dp"
        android:layout_marginTop="24dp"
        app:cardBackgroundColor="@color/cafe4"
        app:cardCornerRadius="21dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@drawable/image15_mask"
            android:translationX="14dp"
            android:translationY="14dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/zahara_norte"
            android:textColor="@color/cafe2"
            android:textSize="14sp"
            android:translationX="14dp"
            android:translationY="95dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="60dp"
            android:layout_height="36dp"
            android:fontFamily="@font/poppins_medium"
            android:lineSpacingExtra="-8dp"
            android:text="@string/angela_bautista"
            android:textColor="@color/cafe2"
            android:textSize="14sp"
            android:translationX="85dp"
            android:translationY="28dp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/aplicaci_n_de_tinte"
            android:textColor="@color/cafe2"
            android:textSize="11sp"
            android:translationX="180dp"
            android:translationY="14dp" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/_300"
            android:textColor="@color/cafe2"
            android:textSize="12sp"
            android:translationX="320dp"
            android:translationY="14dp" />

        <TextView
            android:id="@+id/textView49"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/_100"
            android:textColor="@color/cafe2"
            android:textSize="12sp"
            android:translationX="320dp"
            android:translationY="32dp" />

        <TextView
            android:id="@+id/textView50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/_400"
            android:textColor="@color/cafe2"
            android:textSize="12sp"
            android:translationX="320dp"
            android:translationY="100dp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/corte_de_cabello"
            android:textColor="@color/cafe2"
            android:textSize="12sp" />
    </androidx.cardview.widget.CardView>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/botton_navigation_view_agendar_fecha"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/menu_botton" />

</androidx.constraintlayout.widget.ConstraintLayout>