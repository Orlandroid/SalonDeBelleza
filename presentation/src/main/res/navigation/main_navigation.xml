<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/splashScreenFragment">

    <fragment
        android:id="@+id/login"
        android:name="com.example.citassalon.presentacion.ui.login.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_login_to_home32"
            app:destination="@id/home3"
            app:popUpTo="@id/main_navigation"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_login_to_signUp"
            app:destination="@id/signUp" />
    </fragment>
    <fragment
        android:id="@+id/home3"
        android:name="com.example.citassalon.presentacion.ui.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_home3_to_agendarSucursal"
            app:destination="@id/agendarSucursal" />
        <action
            android:id="@+id/action_home3_to_perfil"
            app:destination="@id/perfil"
            app:enterAnim="@anim/from_right"
            app:exitAnim="@anim/to_left"
            app:popEnterAnim="@anim/from_left"
            app:popExitAnim="@anim/to_right" />
        <action
            android:id="@+id/action_home3_to_sucursales"
            app:destination="@id/sucursales" />
        <action
            android:id="@+id/action_home3_to_nav_info"
            app:destination="@id/nav_info" />
    </fragment>
    <fragment
        android:id="@+id/agendarSucursal"
        android:name="com.example.citassalon.presentacion.ui.sucursal.AgendarSucursalFragment"
        android:label="fragment_agendar_sucursal"
        tools:layout="@layout/fragment_agendar_sucursal">
        <action
            android:id="@+id/action_agendarSucursal_to_agendarStaff"
            app:destination="@id/agendarStaff"
            app:enterAnim="@anim/from_right"
            app:exitAnim="@anim/to_left"
            app:popEnterAnim="@anim/from_left"
            app:popExitAnim="@anim/to_right" />
    </fragment>
    <fragment
        android:id="@+id/agendarStaff"
        android:name="com.example.citassalon.presentacion.ui.staff.AgendarStaffFragment"
        android:label="fragment_agendar_staff"
        tools:layout="@layout/fragment_agendar_staff">
        <action
            android:id="@+id/action_agendarStaff_to_agendarServicio"
            app:destination="@id/agendarServicio"
            app:enterAnim="@anim/from_right"
            app:exitAnim="@anim/to_left"
            app:popEnterAnim="@anim/from_left"
            app:popExitAnim="@anim/to_right" />
        <action
            android:id="@+id/action_agendarStaff_to_detalleStaff"
            app:destination="@id/detalleStaff" />
    </fragment>
    <fragment
        android:id="@+id/agendarServicio"
        android:name="com.example.citassalon.presentacion.ui.servicio.AgendarServicioFragment"
        android:label="fragment_agendar_servicio"
        tools:layout="@layout/fragment_agendar_servicio">
        <action
            android:id="@+id/action_agendarServicio_to_agendarFecha"
            app:destination="@id/agendarFecha"
            app:enterAnim="@anim/from_right"
            app:exitAnim="@anim/to_left"
            app:popEnterAnim="@anim/from_left"
            app:popExitAnim="@anim/to_right" />
    </fragment>
    <fragment
        android:id="@+id/agendarFecha"
        android:name="com.example.citassalon.presentacion.ui.fecha.AgendarFechaFragment"
        android:label="fragment_agendar_fecha"
        tools:layout="@layout/fragment_agendar_fecha">
        <action
            android:id="@+id/action_agendarFecha_to_agendarConfirmacion"
            app:destination="@id/agendarConfirmacion"
            app:enterAnim="@anim/from_right"
            app:exitAnim="@anim/to_left"
            app:popEnterAnim="@anim/from_left"
            app:popExitAnim="@anim/to_right" />
    </fragment>
    <fragment
        android:id="@+id/agendarConfirmacion"
        android:name="com.example.citassalon.presentacion.ui.confirmarcita.AgendarConfirmacionFragment"
        android:label="fragment_agendar_confirmacion"
        tools:layout="@layout/fragment_agendar_confirmacion">
        <action
            android:id="@+id/action_agendarConfirmacion_to_home3"
            app:destination="@id/home3" />
        <action
            android:id="@+id/action_agendarConfirmacion_to_citaAgendada"
            app:destination="@id/citaAgendada" />
    </fragment>
    <fragment
        android:id="@+id/citaAgendada"
        android:name="com.example.citassalon.presentacion.ui.cita_agendada.CitaAgendadaFragment"
        android:label="fragment_cita_agendada"
        tools:layout="@layout/fragment_cita_agendada">
        <action
            android:id="@+id/action_citaAgendada_to_home3"
            app:destination="@id/home3"
            app:enterAnim="@anim/from_left"
            app:exitAnim="@anim/to_right" />
        <argument
            android:name="apponitment"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/perfil"
        android:name="com.example.citassalon.presentacion.ui.perfil.perfil.PerfilFragment"
        android:label="fragment_perfil"
        tools:layout="@layout/fragment_perfil">
        <action
            android:id="@+id/action_perfil_to_home3"
            app:destination="@id/home3"
            app:enterAnim="@anim/from_left"
            app:exitAnim="@anim/to_right" />
        <action
            android:id="@+id/action_perfil_to_login"
            app:destination="@id/login" />
        <action
            android:id="@+id/action_perfil_to_historialDeCitas"
            app:destination="@id/historialDeCitas" />
        <action
            android:id="@+id/action_perfil_to_userProfileFragment"
            app:destination="@id/userProfileFragment" />
    </fragment>
    <fragment
        android:id="@+id/detalleStaff"
        android:name="com.example.citassalon.presentacion.ui.detalle_staff.DetalleStaffFragment"
        android:label="fragment_detalle_staff"
        tools:layout="@layout/fragment_detalle_staff" />
    <fragment
        android:id="@+id/sucursales"
        android:name="com.example.citassalon.presentacion.ui.info.sucursales.SucursalesFragment"
        android:label="fragment_sucursales"
        tools:layout="@layout/fragment_sucursales" />
    <fragment
        android:id="@+id/signUp"
        android:name="com.example.citassalon.presentacion.ui.sign_up.SignUpFragment"
        android:label="sign_in"
        tools:layout="@layout/sign_in">
        <action
            android:id="@+id/action_signUp_to_login"
            app:destination="@id/login" />
    </fragment>
    <fragment
        android:id="@+id/historialDeCitas"
        android:name="com.example.citassalon.presentacion.ui.perfil.historial_citas.HistorialDeCitasFragment"
        android:label="fragment_historial_de_citas"
        tools:layout="@layout/fragment_historial_de_citas">
        <action
            android:id="@+id/action_historialDeCitas_to_historialDetailFragment"
            app:destination="@id/historialDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/splashScreenFragment"
        android:name="com.example.citassalon.presentacion.ui.splashscreen.SplashScreenFragment"
        android:label="fragment_splash_screen"
        tools:layout="@layout/fragment_splash_screen">
        <action
            android:id="@+id/action_splashScreenFragment_to_login"
            app:destination="@id/login"
            app:popUpTo="@id/main_navigation"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/historialDetailFragment"
        android:name="com.example.citassalon.presentacion.ui.perfil.historial_detail.HistorialDetailFragment"
        android:label="HistorialDetailFragment"
        tools:layout="@layout/fragment_historial_detail">
        <argument
            android:name="appointment"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/userProfileFragment"
        android:name="com.example.citassalon.presentacion.ui.perfil.userprofile.UserProfileFragment"
        android:label="fragment_user_profile"
        tools:layout="@layout/fragment_user_profile" />


    <navigation
        android:id="@+id/nav_info"
        app:startDestination="@id/establecimiento">

        <fragment
            android:id="@+id/establecimiento"
            android:name="com.example.citassalon.presentacion.ui.info.establecimiento.EstablecimientoFragment"
            android:label="fragment_establecimiento"
            tools:layout="@layout/fragment_establecimiento">
            <action
                android:id="@+id/action_establecimiento_to_sucursales2"
                app:destination="@id/sucursales2" />
            <action
                android:id="@+id/action_establecimiento_to_storesFragment"
                app:destination="@id/storesFragment" />
        </fragment>
        <fragment
            android:id="@+id/sucursales2"
            android:name="com.example.citassalon.presentacion.ui.info.sucursales.SucursalesFragment"
            android:label="fragment_sucursales"
            tools:layout="@layout/fragment_sucursales">
            <action
                android:id="@+id/action_sucursales2_to_negocioInfo"
                app:destination="@id/negocioInfo" />
        </fragment>
        <fragment
            android:id="@+id/negocioInfo"
            android:name="com.example.citassalon.presentacion.ui.info.sucursal.NegocioInfoFragment"
            android:label="fragment_negocio_info"
            tools:layout="@layout/fragment_negocio_info">
            <action
                android:id="@+id/action_negocioInfo_to_nuestroStaff"
                app:destination="@id/nuestroStaff" />
            <action
                android:id="@+id/action_negocioInfo_to_infoServicios"
                app:destination="@id/infoServicios" />
            <action
                android:id="@+id/action_negocioInfo_to_ubicacion"
                app:destination="@id/ubicacion" />
            <argument
                android:name="currentSucursal"
                app:argType="string" />
        </fragment>
        <fragment
            android:id="@+id/nuestroStaff"
            android:name="com.example.citassalon.presentacion.ui.info.nuestro_staff.NuestroStaffFragment"
            android:label="fragment_nuestro_staff"
            tools:layout="@layout/fragment_nuestro_staff" />
        <fragment
            android:id="@+id/infoServicios"
            android:name="com.example.citassalon.presentacion.ui.info.servicios.InfoServicesFragment"
            android:label="fragment_info_servicios"
            tools:layout="@layout/fragment_info_servicios" />
        <fragment
            android:id="@+id/ubicacion"
            android:name="com.example.citassalon.presentacion.ui.info.ubicacion.UbicacionFragment"
            android:label="fragment_ubicacion"
            tools:layout="@layout/fragment_ubicacion">
            <argument
                android:name="currentSucursal"
                app:argType="string" />
        </fragment>
        <fragment
            android:id="@+id/listOfProductsFragment"
            android:name="com.example.citassalon.presentacion.ui.info.productos.categories.ListOfCategoriesFragment"
            android:label="fragment_list_of_products"
            tools:layout="@layout/fragment_list_of_categories">
            <action
                android:id="@+id/action_listOfProductsFragment_to_productsFragment"
                app:destination="@id/productsFragment" />
            <argument
                android:name="store"
                app:argType="string" />
        </fragment>
        <fragment
            android:id="@+id/productsFragment"
            android:name="com.example.citassalon.presentacion.ui.info.productos.productos.ProductsFragment"
            android:label="fragment_products"
            tools:layout="@layout/fragment_products">
            <argument
                android:name="categoria"
                app:argType="string" />
            <action
                android:id="@+id/action_productsFragment_to_detalleProductoFragment"
                app:destination="@id/detalleProductoFragment" />
            <action
                android:id="@+id/action_productsFragment_to_cartFragment"
                app:destination="@id/cartFragment" />
        </fragment>
        <fragment
            android:id="@+id/detalleProductoFragment"
            android:name="com.example.citassalon.presentacion.ui.info.productos.detalleproducto.DetalleProductoFragment"
            android:label="fragment_detalle_producto"
            tools:layout="@layout/fragment_detalle_producto">
            <argument
                android:name="producto"
                app:argType="string" />
        </fragment>
        <fragment
            android:id="@+id/cartFragment"
            android:name="com.example.citassalon.presentacion.ui.info.cart.CartFragment"
            android:label="CartFragment"
            tools:layout="@layout/fragment_cart" />
        <fragment
            android:id="@+id/storesFragment"
            android:name="com.example.citassalon.presentacion.ui.info.stores.StoresFragment"
            android:label="StoresFragment"
            tools:layout="@layout/fragment_stores" >
            <action
                android:id="@+id/action_storesFragment_to_listOfProductsFragment"
                app:destination="@id/listOfProductsFragment" />
        </fragment>
    </navigation>

</navigation>